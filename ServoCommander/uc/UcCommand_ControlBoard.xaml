<local:UcCommand__base x:Class="ServoCommander.uc.UcCommand_ControlBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServoCommander.uc"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Content="固件版本號: " HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top"/>
            <Label x:Name="lblVersion" Content="尚未連上控制板" HorizontalAlignment="Left" Margin="90,0,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Height="28" Foreground="LightGray"/>
        </Grid>
        <Grid Grid.Row="2">
            <RadioButton x:Name="rbServoMode" Content="檢查舵機模式" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="rbCommandMode" Content="檢查支援指令類別" HorizontalAlignment="Left" Margin="160,10,0,0" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</local:UcCommand__base>
